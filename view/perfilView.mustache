                                     fill="#A6FD35" class="bi bi-person-circle" viewBox="0 0 16 16"
                                     style="position: absolute; top: 0; left: 0; border-radius: 50%; border: 2px solid #00eaff; object-fit: cover;">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                                    <path fill-rule="evenodd"
                                          d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                                </svg>
                            {{/foto_perfil}}
                        </div>


                        <input type="file" class="text-center" name="profilePic" accept="image/*" id="profilePic"
                               style="display:none;" onchange="previewImage(this)">

                        <div class="mt-2 py-3">
                            <button type="button" class="btn-change"
                                    onclick="document.getElementById('profilePic').click()">Cambiar Foto de Perfil
                            </button>
                        </div>
                    </div>


                    <div>
                        <div class="info-label">Nombres</div>
                        <input type="text" class="form-control mb-2 info-box" name="nombre" value="{{nombre}}">
                    </div>

                    <div>
                        <div class="info-label">Apellidos</div>

                        <input type="text" class="form-control mb-2 info-box" name="apellido" value="{{apellido}}">
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="info-label">Sexo</div>
                            <select name="sexo" class="form-control mb-2 info-box">
                                <option value="masculino" {{#sexo_masculino}}selected{{/sexo_masculino}}>Masculino
                                </option>
                                <option value="femenino" {{#sexo_femenino}}selected{{/sexo_femenino}}>Femenino</option>
                                <option value="prefiero no cargarlo" {{#sexo_otro}}selected{{/sexo_otro}}>Prefiero no
                                    cargarlo
                                </option>
                            </select>
                        </div>
                        <div class="col">
                            <div class="info-label">Fecha de nacimiento</div>
                            <input type="date" class="form-control mb-2 info-box" name="fecha_nacimiento"
                                   value="{{fecha_nacimiento}}">
                        </div>
                    </div>

                    <label class="info-label">Ubicación</label>
                    <div class="d-flex align-items-stretch gap-2">
                        <input type="text" id="ubicacion" class="form-control info-box" value="{{ciudad}}, {{pais}}"
                               readonly>
                    </div>
                    <button type="button" class="btn boton-verde fw-bold rounded-pill px-4" data-bs-toggle="modal"
                            data-bs-target="#mapModal">
                        Elegir en el mapa
                    </button>
                    <!-- Campos ocultos para enviar los valores reales -->
                    <input type="hidden" name="ciudad" id="ciudadSeleccionada" value="{{ciudad}}">
                    <input type="hidden" name="pais" id="paisSeleccionado" value="{{pais}}">

                    <!-- Botones -->
                    <div class="mt-4 d-flex justify-content-between">
                        <a href="/POC/perfil/mostrar"
                           class="btn btn-danger btn-lg fw-bold rounded-pill px-4 boton-animado"
                           onclick="return confirm('¿Estás seguro de que querés cancelar los cambios?')">Cancelar</a>
                        <button type="submit"
                                class="btn boton-verde btn-lg fw-bold rounded-pill px-4 boton-animado">Guardar cambios
                        </button>
                    </div>
                </form>
            </article>
        </div>
    </main>
