{{#modo_edicion}}
    <main class="d-flex flex-column justify-content-center align-items-center " style="height: 100vh; margin-top:80px ">
        <div class="d-flex flex-column flex-xl-row gap-5 w-100 justify-content-center p-5">
            <article class="contenedor-perfil text-center" style="">

                <form action="/POC/perfil/guardar" method="POST" enctype="multipart/form-data"
                      class="text-start">

                    <div class="text-center mb-4">
                        <div id="profile-container"
                             style="position: relative; width: 150px; height: 150px; margin: 0 auto;">

                            <img id="previewImg"
                                 src="{{#foto_perfil}}{{{foto_perfil}}}{{/foto_perfil}}{{^foto_perfil}}img/sinperfil.png{{/foto_perfil}}"
                                 alt="Foto de perfil"
                                 class="rounded-circle"
                                 style="width: 150px; height: 150px; object-fit: cover; border-radius: 50%; border: 2px solid #00eaff; position: absolute; top: 0; left: 0;">

                            {{^foto_perfil}}
